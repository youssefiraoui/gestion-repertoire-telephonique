<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iraoui.smi_s5.Inscription">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Formulaire d'inscription"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/idNom"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/idTel"
        android:layout_marginTop="134dp"
        android:ems="10"
        android:hint="Nom et Prenom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idTel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idNom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Numéro de téléphone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idTel"
        android:layout_below="@+id/idTel"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/idPwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/idButtonAnnuler"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idPwd"
        android:layout_marginStart="25dp"
        android:layout_marginTop="54dp"
        android:text="Annuler" />

    <Button
        android:id="@+id/idInscrire"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idButtonAnnuler"
        android:layout_alignBottom="@+id/idButtonAnnuler"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:text="S'inscrire" />



</RelativeLayout>
